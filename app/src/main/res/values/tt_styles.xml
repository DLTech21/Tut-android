<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppComBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <!--<style name="AppTheme" parent="AppBaseTheme">-->
        <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;-->
    <!--</style>-->

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        
    </style>

    <style name="displayImage" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="loadingImageDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item> <!-- 无边框 -->
        <item name="android:windowNoTitle">true</item> <!-- 没有标题 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 背景是否半透明 -->
        <item name="android:windowContentOverlay">@null</item> <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> <!-- 动画样式 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 背景是否模糊 -->
    </style>

    <style name="ImageScale" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimImage</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 设置全屏显示 -->
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AlbumScale">
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏显示 -->
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AnimAlbum" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/tt_album_enter</item>
        <item name="android:windowExitAnimation">@anim/tt_album_exit</item>
    </style>

    <style name="AnimImage" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/tt_image_enter</item>
        <item name="android:windowExitAnimation">@anim/tt_image_exit</item>
    </style>

    <style name="AnimSpeeker" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/tt_speeker_in</item>
        <item name="android:windowExitAnimation">@anim/tt_speeker_out</item>
    </style>

    <style name="SoundVolumeStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="imDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/tt_dialog_bg</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="imDialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="imDialogText.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#fff6577a</item>
    </style>

    <style name="imDialogText.SubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff424242</item>
    </style>

    <style name="phoneNumDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item> <!-- 无边框 -->
        <item name="android:windowNoTitle">true</item> <!-- 没有标题 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮在activity之上 -->
    </style>

    <style name="CCPBigRedButton" parent="@style/CCPBigButton">
        <item name="android:background">@drawable/btn_style_red</item>
    </style>

    <style name="CCPBigGreyButton" parent="@style/CCPBigButton">
        <item name="android:textColor">@color/ec_grey_btn_text_color</item>
        <item name="android:background">@drawable/ec_btn_style_grey</item>
    </style>

    <style name="CCPBigGreenButton" parent="@style/CCPBigButton">
        <item name="android:background">@drawable/btn_style_green</item>
    </style>

    <style name="CCPBigButton">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffd8d8d8</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    <!--<style name="AppTheme" parent="android:Theme.NoTitleBar">-->
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
    <!--</style>-->

    <!--<style name="AppTheme.Widget"/>-->

    <!--<style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">-->
        <!--<item name="fontPath">fonts/lanting.ttf</item>-->
    <!--</style>-->

    <style name="NavPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/navpage</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="CCPList">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@color/list_devider_color</item>
        <item name="android:dividerHeight">0.0px</item>
    </style>

    <style name="dialog_common" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/bgcolor</item>
    </style>
    <style name="quick_option_dialog" parent="@style/dialog_common">
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>